@using UMBIT.Nexus.Auth.Contrato
@{
    ViewData["Title"] = "Cadastro de Administrador";
}

@model AdicionarAdministradorRequestDTO

<div class="d-flex align-items-center justify-content-center vh-100 bg-light">
    <div class="card shadow-lg p-4" style="width: 450px;">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Cadastro de Administrador</h2>
            <p class="text-muted text-center mb-4">Preencha os campos abaixo para criar uma conta.</p>

            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-danger text-center">
                    @ViewBag.Error
                </div>
            }

            <form method="post">
                <div class="form-group">
                    <label for="admNome" class="font-weight-bold">Nome</label>
                    <input type="text"
                           class="form-control"
                           id="admNome"
                           placeholder="Nome"
                           name="Nome"
                           required>
                </div>

                <div class="form-group">
                    <label for="admEmail" class="font-weight-bold">Email</label>
                    <input type="email"
                           class="form-control"
                           id="admEmail"
                           placeholder="Email"
                           name="Email"
                           required>
                </div>

                <div class="form-group">
                    <label for="admPassword" class="font-weight-bold">Senha</label>
                    <input type="password"
                           class="form-control"
                           id="admPassword"
                           placeholder="Senha"
                           name="Password"
                           required>
                </div>

                <div class="form-group">
                    <label for="admConfirmPassword" class="font-weight-bold">Confirmar Senha</label>
                    <input type="password"
                           class="form-control"
                           id="admConfirmPassword"
                           placeholder="Confirmar Senha"
                           name="ConfirmPassword"
                           required>
                </div>

                <button type="submit" class="btn btn-primary btn-block mt-3">Cadastrar</button>
            </form>

            <hr class="my-4">
        </div>
    </div>
</div>
