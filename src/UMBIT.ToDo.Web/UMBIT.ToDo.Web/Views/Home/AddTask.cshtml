@using UMBIT.Nexus.Auth.Contrato
@model AdicionarTarefaRequest

@{
    ViewData["Title"] = "Criar Tarefa";
    IEnumerable<ListaDTO> lists = ViewBag.Lists;
}

<h1>Criar Task</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddTask" enctype="multipart/form-data" id="save-form">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group mt-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="DataFim" class="control-label"></label>
                <input asp-for="DataFim" class="form-control" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status">
                    <option value="0" selected>Criada</option>
                    <option value="1">Em Andamento</option>
                    <option value="2">Concluida</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="IdToDoList" class="control-label"></label>
                <select asp-for="IdToDoList" id="list-select" >
                    <option value=" "> (vazio) </option>
                    @if (lists != null)
                    {
                        foreach (var list in lists)
                        {
                             <!option value="@list.Id" @(Model.IdToDoList != null && Model.IdToDoList == list.Id ? "selected" : "")>@list.Nome</!option>
                        }
                    }
                </select>
                <span asp-validation-for="IdToDoList" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-action="ListaTarefa" class="btn btn-warning">Voltar</a>
            </div>
        </form>
    </div>
</div>
