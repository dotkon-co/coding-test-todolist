@using UMBIT.Nexus.Auth.Contrato
@model AdicionarListaRequest

@{
    ViewData["Title"] = "Criar Lista";
}

<h1>Criar Lista</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddList" enctype="multipart/form-data" id="save-form">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group mt-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-action="ListaTarefa" class="btn btn-warning">Voltar</a>
            </div>
        </form>
    </div>
</div>
